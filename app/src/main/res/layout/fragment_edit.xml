<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.EditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_alignParentBottom="true"
            android:background="#99f8bbd0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TabLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chord Builder"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rests"/>

                </android.support.design.widget.TabLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/add_chord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@color/colorAccent"
                        android:elevation="1dp"
                        android:text="add"
                        android:textColor="@color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/add_chord"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/measure_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_toRightOf="@id/add_chord"
                            android:paddingLeft="5dp"
                            android:paddingVertical="16dp"
                            android:text="M: "
                            />

                        <TextView
                            android:id="@+id/beat_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_toRightOf="@id/measure_num_tv"
                            android:padding="16dp"
                            android:text="B:"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/last_use_stack_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="Last used:"/>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp"
                android:weightSum="6">

                <Button
                    android:id="@+id/last_used_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>

                <Button
                    android:id="@+id/last_used_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>

                <Button
                    android:id="@+id/last_used_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>

                <Button
                    android:id="@+id/last_used_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>

                <Button
                    android:id="@+id/last_used_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>

                <Button
                    android:id="@+id/last_used_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"/>
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/chord_builder_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="5dp"
                android:text="Chord Builder:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp">

                <RadioGroup
                    android:id="@+id/root_bt_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/c"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="C"/>

                    <RadioButton
                        android:id="@+id/d"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="D"/>

                    <RadioButton
                        android:id="@+id/e"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="E"/>

                    <RadioButton
                        android:id="@+id/f"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="F"/>

                    <RadioButton
                        android:id="@+id/g"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="G"/>

                    <RadioButton
                        android:id="@+id/a"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="A"/>

                    <RadioButton
                        android:id="@+id/b"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn"
                        android:button="@null"
                        android:gravity="center"
                        android:text="B"/>

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/root_acc_bt_group"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/root_flat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn_acc"
                        android:button="@null"
                        android:fontFamily="@font/finale_numerics"
                        android:gravity="center"
                        android:text="z"
                        android:textAllCaps="false"/>

                    <RadioButton
                        android:id="@+id/root_sharp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn_acc"
                        android:button="@null"
                        android:fontFamily="@font/finale_numerics"
                        android:gravity="center"
                        android:text="x"
                        android:textAllCaps="false"/>

                    <RadioButton
                        android:id="@+id/root_natural"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-8dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_radiobtn_acc"
                        android:button="@null"
                        android:fontFamily="@font/finale_numerics"
                        android:gravity="center"
                        android:text="y"
                        android:textAllCaps="false"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp">

                <Button
                    android:id="@+id/major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:text="M"/>

                <Button
                    android:id="@+id/minor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:text="m"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/aug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:text="aug"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/dim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:text="dim"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/sus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:text="sus"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp">

                <Button
                    android:id="@+id/ten1_flat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="z"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/ten1_sharp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="x"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/ten1_natural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="y"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="2"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="3"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="4"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="5"/>

                <Button
                    android:id="@+id/_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="6"/>

                <Button
                    android:id="@+id/_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="7"/>

                <Button
                    android:id="@+id/maj_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="+7"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/diminished_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="k 7"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/half_diminished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="j"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp">

                <Button
                    android:id="@+id/ten2_flat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="Z"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/ten2_sharp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="X"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/ten2_natural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:background="@drawable/measure_background"
                    android:fontFamily="@font/finale_numerics"
                    android:text="Y"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="("
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="! !"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:background="@drawable/measure_background_white"
                    android:fontFamily="@font/finale_numerics"
                    android:text="! #"
                    android:textAllCaps="false"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/preview_select_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/preview"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp"
                    android:text="Preview/Select:"/>

                <RelativeLayout
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:background="@drawable/measure_background_white"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="5dp">

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>


